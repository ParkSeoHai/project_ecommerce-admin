<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - parkseohai</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project_ecommerce_admin.styles.css" asp-append-version="true" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @{
        var controller = ViewContext.RouteData.Values["Controller"];
    }

    <!-- Header -->
    <header id="header" class="header main-container d-flex align-items-center">
        <div class="logo d-flex align-items-center">
            <a href="/">
                <img src="~/icons/logo.svg" alt="Logo" class="logo__img">
            </a>
        </div>
        <div class="header__body d-flex align-items-center w-100 ps-4">
            <div class="header__body--left d-flex align-items-center me-auto">
                <button class="navbar-toggle" type="button" onclick="toggleSidebar()">
                    <img src="~/icons/menu.svg" alt="" class="navbar-toggle__icon icon">
                </button>
                <div class="search-group d-flex align-items-center">
                    <div class="search-group__icon">
                        <img src="~/icons/search.svg" alt="" class="icon">
                    </div>
                    <input type="text" class="search-group__input" placeholder="Search now">
                </div>
            </div>
            <div class="header__body--right">
                <ul class="navbar d-flex align-items-center gap-4">
                    <li class="nav-item">
                        <button type="button" class="nav-item__icon bell-icon">
                            <img src="~/icons/bell.svg" alt="" class="icon">
                        </button>
                    </li>
                    <li class="nav-item nav-profile">
                        <div class="avatar">
                            <img src="~/images/avatar1.jpg" alt="" class="nav-profile__img">
                        </div>
                    </li>
                    <li class="nav-item nav-settings">
                        <button class="nav-item__icon" type="button">
                            <img src="~/icons/three-dots.svg" alt="" class="icon">
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar">
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" id="Home" class="nav-link active">
                    <span class="nav-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-grid" viewBox="0 0 16 16">
                            <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5zM2.5 2a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5zm6.5.5A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5zM1 10.5A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5zm6.5.5A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5z" />
                        </svg>
                    </span>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Product" asp-action="Index" id="Product" class="nav-link">
                    <span class="nav-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                            <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.37 2.37 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0M1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5M4 15h3v-5H4zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1zm3 0h-2v3h2z" />
                        </svg>
                    </span>
                    <span class="nav-text">Products</span>
                    @* <span class="nav-icon__arrow">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </span> *@
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main -->
    <main role="main" class="main-content pt-4">
        <div class="main-container">
            @RenderBody()
        </div>

        <div class="modal modal-main" onclick="clickModal(this)"></div>
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script asp-append-version="true">
        @* Handle active side bar *@
        const controller = @Html.Raw(Json.Serialize(controller));
        const sidebarLinks = document.querySelectorAll('.sidebar .nav-link')
        sidebarLinks.forEach(navLink => {
            if (navLink.id === controller) {
                navLink.classList.add('active');
            } else  {
                navLink.classList.remove('active');
            }
        });
        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
